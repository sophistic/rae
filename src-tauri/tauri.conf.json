{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "rae",
  "version": "0.1.0",
  "identifier": "com.rae.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5174",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "rae",
        "width": 1200,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "alwaysOnTop": false,
        "decorations": false,
        "shadow": false,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default", "overlay-capability", "chat-capability"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
